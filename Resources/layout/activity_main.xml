<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="50sp"
        android:background="#565956"
        android:textDirection="ltr"
        android:id="@+id/tv_Result"

        
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:rowCount="6"
        android:columnCount="4"
        
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="25sp"
            android:id="@+id/btn7"
            android:textColor="#fff"
            android:background="#000000"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="25sp"
            android:id="@+id/btn8"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="25sp"
            android:id="@+id/btn9"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="AC"
            android:textSize="25sp"
            android:id="@+id/btnAC"
            android:textColor="#fff"
            android:background="#21b1ff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="25sp"
            android:id="@+id/btn4"
            android:textColor="#fff"
            android:background="#000000"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="25sp"
            android:id="@+id/btn5"
            android:textColor="#fff"
            android:background="#000000"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="25sp"
            android:id="@+id/btn6"
            android:textColor="#fff"
            android:background="#000000"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="*"
            android:textSize="25sp"
            android:id="@+id/btnTimes"
            android:textColor="#fff"
            android:background="#21b1ff"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="25sp"
            android:id="@+id/btn1"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="25sp"
            android:id="@+id/btn2"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="25sp"
            android:id="@+id/btn3"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="25sp"
            android:id="@+id/btnPlus"
            android:textColor="#fff"
            android:background="#21b1ff"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="25sp"
            android:id="@+id/btn0"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="25sp"
            android:id="@+id/btnDot"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="25sp"
            android:id="@+id/btnShowResult"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="/"
            android:textSize="25sp"
            android:id="@+id/btnDivide"
            android:textColor="#fff"
            android:background="#21b1ff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="TAN"
            android:textSize="25sp"
            android:id="@+id/btnTAN"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="COS"
            android:textSize="25sp"
            android:id="@+id/btnCOS"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="SIN"
            android:textSize="25sp"
            android:id="@+id/btnSIN"
            android:textColor="#fff"
            android:background="#000000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="25sp"
            android:id="@+id/btnMinus"
            android:textColor="#fff"
            android:background="#21b1ff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="CE"
            android:id="@+id/btnCE"
            android:textSize="25sp"
            android:textColor="#fff"
            android:background="#21b1ff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="POW"
            android:id="@+id/btnPow"
            android:textSize="25sp"
            android:textColor="#fff"
            android:background="#21b1ff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="("
            android:textSize="25sp"
            android:id="@+id/btnLeftParenthesis"
            android:textColor="#fff"
            android:background="#21b1ff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text=")"
            android:textSize="25sp"
            android:id="@+id/btnRightParenthesis"
            android:textColor="#fff"
            android:background="#21b1ff"
            />
    </GridLayout>


</LinearLayout>